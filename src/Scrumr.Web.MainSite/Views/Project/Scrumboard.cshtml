@inherits System.Web.Mvc.WebViewPage<Scrumr.Web.MainSite.ReadModel.Scrumboard>

@{
    View.Title = "Scrumboard";
    LayoutPage = "~/Views/Shared/_Layout.cshtml";
}

@section header
{
	<script type="text/javascript" src="../../Scripts/ScrumBoard.js"></script>	
}

    <h2>Scrumboard</h2>
	 <table id="board">
        <thead>
            <tr>
                <th>
                    Stories
                </th>
                @foreach (var stage in Model.Stages)
                {
                <th>
                    @stage.Name
                </th>
                } 
            </tr>
        </thead>
        <tbody>
            @foreach (var story in Model.Stories)
            {
            <tr>
                <td>
                    @story.Description
                </td>
                @foreach (var stage in Model.Stages)
                {
                <td class="storystage">
                    @foreach (var task in story.Tasks.Where(t => t.Stage.Id == stage.Id))
                    {
                    <div class="task ui-widget-content ui-corner-tr">
                        <h5 class="ui-widget-header">
                            Task</h5>
							@task.Description
                    </div>
                    }
                </td>
                } 
            </tr>
            } 
        </tbody>
    </table>